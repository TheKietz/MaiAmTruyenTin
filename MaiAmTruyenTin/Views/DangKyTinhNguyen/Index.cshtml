@{
    ViewData["Title"] = "Đăng ký tình nguyện";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký tình nguyện</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
       
        .banner {
            background: linear-gradient(135deg, #cce7ff, #e6f2ff);
          padding: 80px 20px;
          text-align: center;
          color: black;
        }
        .form-section {
          background: #9090a0;
          padding: 60px 20px;
          margin: 30px auto;
          max-width: 900px;
          border-radius: 8px;
        }
        .news-section {
            background: linear-gradient(135deg, #cce7ff, #e6f2ff);
          padding: 40px 20px;
        }
        .news-card {
          background: #808090;
          height: 200px;
          border-radius: 6px;
        }
    </style>
</head>
<body>
    <!-- Banner -->
    <section class="banner">
        <h1>Tiêu đề</h1>
        <p>Đoạn giới thiệu ngắn gọn về chương trình hoặc tổ chức</p>
    </section>

    <!-- Form đăng ký -->
    <section class="form-section text-white">
        <h2 class="text-center mb-4">Form đăng ký tình nguyện</h2>
        <form>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Họ và tên</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Số điện thoại</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Thời gian có thể tham gia</label>
                    <input type="text" class="form-control">
                </div>
                <div class="col-12">
                    <label class="form-label">Lý do tham gia</label>
                    <textarea class="form-control" rows="4"></textarea>
                </div>
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-light mt-3">Gửi đăng ký</button>
                </div>
            </div>
        </form>
    </section>

    <!-- Tin tức -->
    <section class="news-section">
        <div class="container">
            <h2 class="text-center mb-4">Tin tức tình nguyện</h2>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="news-card d-flex align-items-center justify-content-center text-white">
                        Bài viết 1
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="news-card d-flex align-items-center justify-content-center text-white">
                        Bài viết 2
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="news-card d-flex align-items-center justify-content-center text-white">
                        Bài viết 3
                    </div>
                </div>
            </div>
        </div>
    </section>

    
</body>
</html>
