@{
    ViewData["Title"] = "Trang chủ";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<!-- SLIDER -->
<div id="homeCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/random-1.jpeg" alt="Ảnh mái ấm 1">
        </div>
        <div class="carousel-item">
            <img src="~/images/random-2.jpeg" alt="Ảnh mái ấm 2">
        </div>
        <div class="carousel-item">
            <img src="~/images/random-3.jpeg" alt="Ảnh mái ấm 3">
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<!-- TIN TỨC -->
<section class="news py-6">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold text-primary">Tin tức nổi bật</h2>
        <div class="row g-4">

            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="news-card card h-100 border-0 shadow-sm">
                    <div class="image-wrapper">
                        <img src="https://picsum.photos/400/250?random=11" class="card-img-top" alt="Bài viết 1">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">Khởi động chiến dịch “Mái ấm cho em”</h5>
                        <p class="card-text flex-grow-1">
                            Hơn 100 tình nguyện viên đã cùng chung tay xây dựng không gian an toàn và ấm áp cho trẻ em
                            có hoàn cảnh khó khăn.
                        </p>
                        <a href="#" class="btn btn-outline-primary mt-auto">Xem thêm</a>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="news-card card h-100 border-0 shadow-sm">
                    <div class="image-wrapper">
                        <img src="https://picsum.photos/400/250?random=12" class="card-img-top" alt="Bài viết 2">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">Chương trình Trung thu yêu thương</h5>
                        <p class="card-text flex-grow-1">
                            Các em nhỏ đã có một mùa Trung thu ấm áp với bánh kẹo, lồng đèn và những tiết mục văn nghệ
                            vui tươi.
                        </p>
                        <a href="#" class="btn btn-outline-primary mt-auto">Xem thêm</a>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="news-card card h-100 border-0 shadow-sm">
                    <div class="image-wrapper">
                        <img src="https://picsum.photos/400/250?random=13" class="card-img-top" alt="Bài viết 3">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">Khóa học kỹ năng sống cho trẻ</h5>
                        <p class="card-text flex-grow-1">
                            Mái ấm đã tổ chức các lớp học kỹ năng mềm, giúp các em tự tin hơn trong giao tiếp và học
                            tập.
                        </p>
                        <a href="#" class="btn btn-outline-primary mt-auto">Xem thêm</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


<!-- LỜI KÊU GỌI -->
<section class="cta-section py-7">
    <div class="container">
        <div class="row align-items-center gy-4">
            <div class="col-lg-5 d-flex justify-content-center">
                <div class="cta-visual">
                    <!-- thay bằng /images/child-1.jpeg của bạn -->
                    <img src="https://picsum.photos/400/250?random=11" alt="Em bé vui vẻ" class="img-fluid cta-img">
                    <div class="cta-accent"></div>
                </div>
            </div>

            <div class="col-lg-7">
                <h2 class="text-primary fw-bold">Lời kêu gọi</h2>
                <p class="fw-bold mt-2">Chung tay hôm nay — Tươi sáng ngày mai</p>
                <p class="text-muted mb-4">
                    Mỗi đóng góp là một nụ cười, một tương lai bền vững. Hãy đồng hành cùng chúng tôi để mang lại
                    mái ấm, giáo dục và hy vọng cho các em nhỏ có hoàn cảnh khó khăn.
                </p>

                <div class="d-flex gap-3">
                    <a href="#" class="btn btn-primary btn-lg shadow-sm cta-btn">Đóng góp</a>
                    <a href="#" class="btn btn-outline-primary btn-lg cta-btn-outline">Tìm hiểu thêm</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- MỤC TIÊU -->
<section class="goals-section py-6">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="text-primary fw-bold">Mục tiêu</h2>
            <p class="fw-bold mt-2">Cam kết từ mái ấm</p>
            <p class="text-muted">Những giá trị và dịch vụ chúng tôi mang đến cho trẻ em và cộng đồng.</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <article class="goal-card h-100 p-4 shadow-sm rounded">
                    <div class="goal-icon d-flex align-items-center justify-content-center mb-3">
                        <img src="https://picsum.photos/400/250?random=11" alt="Ngôi nhà" width="48">
                    </div>
                    <h5 class="fw-bold">Ngôi nhà yêu thương</h5>
                    <p class="text-muted mb-0">Cung cấp nơi ở an toàn, ấm áp và đầy đủ cho các em.</p>
                </article>
            </div>

            <div class="col-md-4">
                <article class="goal-card h-100 p-4 shadow-sm rounded">
                    <div class="goal-icon d-flex align-items-center justify-content-center mb-3">
                        <img src="https://picsum.photos/400/250?random=11" alt="Giáo dục" width="48">
                    </div>
                    <h5 class="fw-bold">Giáo dục & phát triển</h5>
                    <p class="text-muted mb-0">Hỗ trợ học tập, kỹ năng sống và cơ hội phát triển toàn diện.</p>
                </article>
            </div>

            <div class="col-md-4">
                <article class="goal-card h-100 p-4 shadow-sm rounded">
                    <div class="goal-icon d-flex align-items-center justify-content-center mb-3">
                        <img src="https://picsum.photos/400/250?random=11" alt="Cộng đồng" width="48">
                    </div>
                    <h5 class="fw-bold">Kết nối cộng đồng</h5>
                    <p class="text-muted mb-0">Xây dựng mạng lưới tình nguyện viên và các đối tác bền vững.</p>
                </article>
            </div>
        </div>
    </div>
</section>

<!-- NHÀ TÀI TRỢ -->
<section class="py-5 bg-white text-center">
    <div class="container">
        <h2 class="text-primary fw-bold">Nhà tài trợ</h2>
        <p class="fw-bold mb-5">Đối tác của chúng tôi</p>

        <div id="sponsorFade" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-inner">

                <!-- Nhóm 1 -->
                <div class="carousel-item active">
                    <div class="row justify-content-center g-4">
                        <div class="col-6 col-md-3">
                            <img src="https://picsum.photos/400/250?random=11" class="img-fluid partner-logo">
                        </div>
                        <div class="col-6 col-md-3">
                            <img src="https://picsum.photos/400/250?random=11" class="img-fluid partner-logo">
                        </div>
                        <div class="col-6 col-md-3">
                            <img src="https://picsum.photos/400/250?random=11" class="img-fluid partner-logo">
                        </div>
                        <div class="col-6 col-md-3">
                            <img src="https://picsum.photos/400/250?random=11" class="img-fluid partner-logo">
                        </div>
                    </div>
                </div>

                <!-- Nhóm 2 -->
                <div class="carousel-item">
                    <div class="row justify-content-center g-4">
                        <div class="col-6 col-md-3">
                            <img src="https://picsum.photos/400/250?random=13" class="img-fluid partner-logo">
                        </div>
                        <div class="col-6 col-md-3">
                            <img src="https://picsum.photos/400/250?random=13" class="img-fluid partner-logo">
                        </div>
                        <div class="col-6 col-md-3">
                            <img src="https://picsum.photos/400/250?random=13" class="img-fluid partner-logo">
                        </div>
                        <div class="col-6 col-md-3">
                            <img src="https://picsum.photos/400/250?random=13" class="img-fluid partner-logo">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
