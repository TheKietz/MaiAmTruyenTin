@using MaiAmTruyenTin.Enums
@model MaiAmTruyenTin.ViewModels.TinTucVM

@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Tin tức";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <style>


    </style>
</head>
<body>
    <div class="container py-5">        
        <div class="row">
            <!-- Danh sách bài viết -->
            <div class="col-lg-8">
                <h2 class="news-title">Tin tức sự kiện & Hoạt động</h2>
                <div class="row">
                    <!-- Bài viết 1 -->
                    @foreach (var item in Model.EventNews)
                    {
                        <div class="col-md-6 col-xl-4">
                            <div class="news-card" style="height: 320px; display: flex; flex-direction: column;">
                                <img src="@item.CoverImage" alt="Ảnh bài viết" style="width: 100%; height: 200px; object-fit: cover;">
                                <div class="news-card-body" style="flex-grow: 1; padding: 15px; display: flex; flex-direction: column; justify-content: space-between;">
                                    <div class="news-card-date" style="font-size: 13px; color: #888; margin-bottom: 8px;">
                                        @(item.CreatedAt.HasValue? item.CreatedAt.Value.ToString("dd/MM/yyyy") : "")
                                        | @item.Category?.Name
                                    </div>
                                    <a asp-action="Details" asp-route-id="@item.NewsId" style="text-decoration: none; color: black; flex-grow: 1;" onmouseover="this.style.color='blue'" onmouseout="this.style.color='black'">
                                        @item.Title
                                    </a>
                                </div>
                            </div>
                        </div>

                    }
                </div>                
                <h2 class="news-title">Bài viết chia sẻ</h2>
                <div class="row">
                    <!-- Bài viết 1 -->
                    @foreach (var item in Model.AllNewsPaged)
                    {
                        <div class="col-md-6 col-xl-4">
                            <div class="news-card" style="height: 320px; display: flex; flex-direction: column;">
                                <img src="@item.CoverImage" alt="Ảnh bài viết" style="width: 100%; height: 200px; object-fit: cover;">
                                <div class="news-card-body" style="flex-grow: 1; padding: 15px; display: flex; flex-direction: column; justify-content: space-between;">
                                    <div class="news-card-date" style="font-size: 13px; color: #888; margin-bottom: 8px;">
                                        @(item.CreatedAt.HasValue? item.CreatedAt.Value.ToString("dd/MM/yyyy") : "")
                                        | @item.Category?.Name
                                    </div>
                                    <a asp-action="Details" asp-route-id="@item.NewsId" style="text-decoration: none; color: black; flex-grow: 1;" onmouseover="this.style.color='blue'" onmouseout="this.style.color='black'">
                                        @item.Title
                                    </a>
                                </div>
                            </div>
                        </div>

                    }
                </div>
                <!-- Phân trang -->
                <div class="d-flex justify-content-center mt-4">
                    @Html.PagedListPager(Model.AllNewsPaged, page => Url.Action("Index", new { page=page }),
                    new PagedListRenderOptions
                    {
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" },
                        UlElementClasses = new[] { "pagination" }
                    })
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sidebar">
                    <!-- Search -->
                    <form class="d-flex mb-4">
                        <input class="form-control search-input" type="search" placeholder="Nhập nội dung tìm kiếm">
                        <button class="btn btn-info search-btn text-white" type="submit">
                            <i class="bi bi-search"></i> 🔍
                        </button>
                    </form>

                    <!-- Danh mục -->
                    <h5>DANH MỤC BÀI VIẾT</h5>
                    <ul class="list-unstyled">
                        @foreach (var item in Model.NewsCountByCategory)
                        {
                            <li>
                                ▶
                                <a href="#"
                                   style="text-decoration: none; color: dimgray; flex-grow: 1;"
                                   onmouseover="this.style.color='blue'"
                                   onmouseout="this.style.color='dimgray'">@(item.CategoryName)</a>
                                <span class="text-muted float-end">@(item.NewsCount)</span>
                            </li>
                        }
                    </ul>
                    <!-- 5 Bài viết gần đây -->
                    <h5>BÀI VIẾT GẦN ĐÂY</h5>
                    <div class="recent-posts">
                        @foreach (var item in Model.RecentNews.Where(n => n.Status == NewsStatus.Approved))
                        {
                            <div class="d-flex mb-3 align-items-center">
                                <a href="@Url.Action("Details", "TinTuc", new { id = item.NewsId })" style="display: inline-block; cursor: pointer;">
                                    <img src="@Url.Content("~/template/images/news1.jpg")" alt="thuml" style="width:70px; height:70px; object-fit: cover;">
                                </a>
                                <div style="width: calc(100% - 60px); padding-left: 10px; overflow: hidden;">
                                    <small>
                                        @(item.CreatedAt.HasValue? item.CreatedAt.Value.ToString("dd/MM/yyyy") : "")
                                        | @item.Category?.Name
                                    </small>
                                    <p class="post-title" style="margin: 0; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        <a asp-action="Details" asp-route-id="@item.NewsId" style="text-decoration: none; color: black; flex-grow: 1;" onmouseover="this.style.color='blue'" onmouseout="this.style.color='black'">
                                            @item.Title
                                        </a>
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
