            font-weight: bold;
            margin-bottom: 20px;
        }

        .subtitle {
            font-size: 20px;
            margin-bottom: 15px;
            color: #555;
        }

        .body-text {
            font-size: 18px;
            margin-bottom: 30px;
        }

        /* Button */
        .btn {
            display: inline-block;
            padding: 14px 32px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: 0.3s;
        }

        .btn-primary-lg {
            background-color: #f04d4d;
            color: #fff;
        }

