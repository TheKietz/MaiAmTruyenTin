        /* Block wrapper chung */
        .cover-section {
            position: relative;
            background-image: url('/template/images/bg.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #fafafa;
            padding: 80px 20px;
            text-align: center;
            color: #222;
        }

        .cover-section1 {
            position: relative;
