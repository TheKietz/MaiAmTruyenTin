@model MaiAmTruyenTin.ViewModels.GioiThieuVM;
@{
    ViewData["Title"] = "Giới thiệu trung tâm";
}

<html lang="vi">
<head>
    <meta charset="utf-8" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/gioithieu.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

    <main>
        <div id="cover-block" class="block-wrapper cover-section">
            <section class="w-section w-section--xxl">
                <div class="row">
                    <div class="col-md-8" style="padding:120px">
                        <div class="text-xl-end">
                            <header class="w-section__header text-center">
                                <h2 class="hero-title">MÁI ẤM TRUYỀN TIN</h2>
                                <p class="subtitle">We are influencing our community...</p>
                                <p class="body-text" style="text-align:justify"><strong>Come and join us every Sunday at 10:30 am.</strong></p>
                            </header>
                            <footer class="w-section__footer text-center">
                                <a href="/#contacts" class="btn btn-primary-lg">QUYÊN GÓP</a>
                            </footer>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <div id="cover-block" class="block-wrapper" style="background-color:whitesmoke">
            <section class="w-section w-section--xxl">
                <div class="row">
                    <div class="col-md-6" style="padding:50px">
                        <h2 class="hero-title">Về chúng tôi </h2>
                        <div class="vision-underline-about"></div>
                        <p class="text-body" style="text-align:justify">@Model.AboutUs</p>

                    </div>
                    <div class="col-md-6" style="padding:50px">
                        <img src="@Model.Vision." alt="About Us" style="width:100%; border-radius:10px; box-shadow:0 4px 8px rgba(0,0,0,0.1)">
                    </div>
                </div>
            </section>
        </div>
        <div id="cover-block" class="block-wrapper cover-section-slogan">
            <section class="w-section w-section--xxl">
                <div class="w-section__inner">
                    <h2 class="hero-title">MÁI ẤM TRUYỀN TIN</h2>
                    <p class="subtitle">We are influencing our community...</p>
                    <p class="body-text"><strong>Come and join us every Sunday at 10:30 am.</strong></p>
                </div>
            </section>
        </div>
        <div class="container vision-section" style="background-color:whitesmoke">
            <h2 class="vision-title">Tầm nhìn của chúng tôi</h2>
            <div class="vision-underline"></div>

            <div class="row align-items-center">
                <!-- Ảnh bên trái -->
                <div class="col-lg-6 vision-image mb-3 mb-lg-0">
                    <img src="/uploads/@Model.VisionImage" alt="Our Vision Image">
                </div>

                <!-- Nội dung bên phải -->
                <div class="col-lg-6">
                    <div class="vision-item">
                       
                        <p>@Model.Vision</p>

                    </div>
                </div>
            </div>
        </div>

        <div id="cover-block" class="block-wrapper" style="background-color:white">
            <h2 class="vision-title">Nhà sáng lập</h2>
            <div class="vision-underline"></div>
            <section class="foundation">
                @foreach (var item in Model.AllFounder)
                {
                    <div class="foundation-box">
                        <div class="row">
                            <div class="col-md-3" style="padding:20px">
                                @if (item.Avarta != null)
                                {
                                    <img src="@item.Avarta" alt="Founder 1" style="width:100px; height:100px; object-fit:cover; border-radius:50px; box-shadow:0 4px 8px rgba(0,0,0,0.1)">
                                }
                                else
                                {
                                    <img src="~/images/default.png" alt="Founder 1" style="width:100px; height:100px; object-fit:cover; border-radius:50px; box-shadow:0 4px 8px rgba(0,0,0,0.1)">
                                }
                            </div>
                            <div class="col-md-9 bio-container">
                                <p style="text-align:justify">
                                    <span class="bio-name">@item.FullName</span>
                                    <span class="bio-title">@item.Role</span>
                                    @item.Notes
                                </p>
                            </div>
                        </div>
                    </div>
                }

            </section>
        </div>

        <section class="sponsor-section">
            <div class="sponsor-carousel-container">
                <h2 class="hero-title text-center">Các nhà tài trợ</h2>
                <div class="vision-underline"></div>
                <div class="sponsor-carousel">
                    <div class="sponsor-track">
                        @foreach (var item in Model.AllSponsor)
                        {
                            <a href="@item.Website">
                                @if (item.Logo!=null)
                                {
                                    <img src="@item.Logo" alt="Sponsor 1" />
                                }
                                else
                                {
                                    <img src="~/images/default.png" alt="Sponsor 1" />     
                                }
                            </a>
                        }
                    </div>
                </div>
            </div>
        </section>

    </main>
    <script>
        const track = document.querySelector('.sponsor-track');
        const sponsors = document.querySelectorAll('.sponsor-track img');
        const visibleCount = 10;
        const scrollInterval = 1000;

        let index = 0;
        const sponsorWidth = sponsors[0].offsetWidth + 20;

        setInterval(() => {
            if (sponsors.length <= visibleCount) return;

            index++;
            if (index > sponsors.length - visibleCount) {
                index = 0;
            }

            track.style.transform = `translateX(-${index * sponsorWidth}px)`;
        }, scrollInterval);
    </script>

</body>
</html>
