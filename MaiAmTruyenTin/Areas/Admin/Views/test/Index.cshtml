@{
    ViewData["Title"] = "Test CKEditor";
}

<h1>Test CKEditor</h1>

<form method="post" enctype="multipart/form-data" asp-action="Upload">
    <textarea id="Content" name="Content" rows="10" cols="80"></textarea>
    <br />
    <input type="file" name="CoverImageFile" />
    <button type="submit">Upload</button>
</form>

@if (ViewBag.FileUrl != null)
{
    <p>File uploaded: <a href="@ViewBag.FileUrl" target="_blank">@ViewBag.FileUrl</a></p>
}

@section scripts {
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            CKEDITOR.replace('Content', {
                customConfig: '/Content/ckeditor/config.js',
                extraAllowedContent: 'span'
            });
        });
    </script>
}
