@model IEnumerable<MaiAmTruyenTin.Models.StaticPage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<div class="content-wrapper">
    <div class="container-fluid">
        <h2>Danh sách tin tức</h2>
        <hr />
        <div class="card mb-3">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <form action="${pageContext.request.contextPath}/admin/employers" method="get">
                            <div class="input-group">
                                <input type="text" name="keyword" class="form-control" placeholder="Nhập tiêu đề" value="" />
                                <input type="hidden" name="size" value="${pageSize}" />
                                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-action="Create" class="btn btn-success">Thêm nội dung</a>
                    </div>
                </div>
                <div class="table-responsive" style="overflow-x: auto;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Slug)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Content)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CoverImage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsVisible)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedByUser)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedByUser)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.isDeleted)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeletedByUser)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeletedAt)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Slug)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Content)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CoverImage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsVisible)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedByUser.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedByUser.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.isDeleted)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DeletedByUser.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DeletedAt)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.PageId" class="btn btn-sm btn-primary">Sửa</a> |
                                        <a asp-action="Details" asp-route-id="@item.PageId" class="btn btn-sm btn-info">Chi tiết</a>
                                        <form asp-action="Delete" asp-route-id="@item.PageId" method="post" style="display:inline;"
                                              onsubmit="return confirm('Bạn có chắc muốn xoá ND: @item.Title ?');">
                                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="overlay toggle-menu"></div>
    </div>
</div>